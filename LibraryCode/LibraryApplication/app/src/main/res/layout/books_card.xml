<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:elevation="5dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:src="@drawable/books_placeholder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/card_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Author"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/card_book_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Category"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:elevation="5dp"
            android:background="@drawable/rounded_edges"
            android:drawableStart="@drawable/ic_check_white_24dp"
            android:drawablePadding="5dp"/>

    </LinearLayout>
</LinearLayout>